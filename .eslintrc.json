{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["prettier", "prettier/react"],
  "globals": {
    "__DEV__": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "plugins": ["prettier", "react", "@typescript-eslint"],
  "rules": {
    "prettier/prettier": "error",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    ]
  }
  //  "overrides": [
  //    {
  //      "files": ["**/*.ts"],
  //      "parser": "@typescript-eslint/parser",
  //      "rules": {
  //        "no-undef": "off"
  //      }
  //    }
  //  ]
}
